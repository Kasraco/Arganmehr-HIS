@model Telerik.Web.Mvc.GridModel<ViewModel.AdminArea.Arganmehr.LanguageModel>
@using Telerik.Web.Mvc.UI
@{
    ViewBag.Title = T("Admin.Configuration.Languages").Text;
}

<div class="panel panel-default">
    <div class="panel-heading">
        <strong>سامانه مدیریت HIS ارگانمهر</strong>
    </div>
    <div class="panel-body" style="min-height: 300px;">


        <div class="section-header">
            <div class="title">
                <i class="fa fa-language"></i>
                @T("Admin.Configuration.Languages")
            </div>
            <div class="options">
                <a href="@Url.Action("Create")" class="btn btn-primary"><i class="fa fa-plus"></i>&nbsp;@T("Admin.Common.AddNew")</a>
            </div>
        </div>
        <table>
            <tr>
                <td>
                    @(Html.Telerik().Grid<ViewModel.AdminArea.Arganmehr.LanguageModel>()
                    .Name("languages-grid")
                    .BindTo(Model.Data)
                    .Columns(columns =>
                    {
                        columns.Bound(x => x.LanguageName)
                            .Template(x => Html.ActionLink(x.LanguageName, "Edit", new { id = x.Id }));
                        columns.Bound(x => x.LanguageCulture)
                            .Width(200)
                            .Centered();
                        columns.Template(
                            @<div>
                                @Html.ActionLink(T("Admin.Configuration.Languages.Resources.View").Text, "Resources", new { languageId = item.Id })
                            </div>
                            ).Width(200)
                            .Centered()
                            .Title(T("Admin.Configuration.Languages.Resources.View").Text);
                        columns.Bound(x => x.DisplayOrder)
                            .Width(200)
                            .Centered();
                        columns.Bound(x => x.Published)
                            .Width(200)
                            .Template(item => @Html.SymbolForBool(item.Published))
                            .ClientTemplate(@Html.SymbolForBool("Published"))
                            .Centered();
                    })
                            //.DataBinding(dataBinding => dataBinding.Ajax().Select("List", "Language"))
                                                                                                                            .EnableCustomBinding(false))
                </td>
            </tr>
        </table>
    </div>
    <div class="panel-footer">
        <strong>
            مرکز سلامت الکترونیک ارگانمهر
        </strong>
    </div>
</div>
